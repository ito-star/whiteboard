{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Firebase Emulators",
      "presentation": {
        "hidden": false,
        "group": "Whatboard - Backend",
        "order": 1
      },
      "type": "pwa-node",
      // Why "attach" instead of "launch"? Because Firebase Functions always
      // have a maximum execution time associated with them. That maximum can
      // be configured, but maxes out at 9 minutes. Launching the Firebase
      // Emulators in "debug mode" first disables that maximum execution time,
      // so the debug session can run as long as it needs to.
      "request": "attach",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "restart": {
        "delay": 1000,
        "maxAttempts": 10
      }
    },
    {
      "name": "React Dev Server",
      "presentation": {
        "hidden": false,
        "group": "Whatboard - Frontend",
        "order": 1
      },
      "type": "node-terminal",
      "request": "launch",
      "command": "npm start",
      "env": {
        "BROWSER": "none"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Chrome",
      "presentation": {
        "hidden": false,
        "group": "Whatboard - Frontend",
        "order": 2
      },
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "userDataDir": "${workspaceFolder}/.vscode/chrome-user-data"
    }
  ]
}
